<!DOCTYPE html>
<html lang="fr" data-bs-theme="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Plutus - Application de Gestion Financière Divine">
    <meta property="og:description" content="Plutus, votre assistant de gestion financière inspiré de la mythologie grecque. Gérez vos finances avec la sagesse des dieux et atteignez la prospérité.">
    <meta property="og:image" content="https://plutus.arnaudtricoire.com/images/logo-plutus.webp">
    <meta property="og:url" content="https://plutus.arnaudtricoire.com">
    <meta property="og:type" content="website">
    
    <!-- Preconnect pour les ressources externes critiques -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">

    <!-- Preload des ressources critiques -->
    <link rel="preload" href="/images/logo-plutus.webp" as="image" type="image/webp" fetchpriority="high">
    
    <!-- Métadonnées SEO -->
    <title>Plutus - Application de Gestion Financière Divine</title>
    <meta name="description" content="Plutus, votre assistant de gestion financière inspiré de la mythologie grecque. Gérez vos finances avec la sagesse des dieux et atteignez la prospérité.">
    
    <!-- Styles critiques en inline pour le First Paint -->
    <style>
        .navbar-brand img {
            width: 50px;
            height: 50px;
        }
        .hero-logo {
            width: 120px;
            height: 120px;
        }
    </style>

    <!-- Styles externes avec loading optimisé -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/images/logo-plutus.webp">

    <!-- Preload avec attribut 'as' correct -->
    <link rel="preload" href="/css/styles.css" as="style">
    <link rel="preload" href="/js/landing.js" as="script">
    
    <!-- Chargement effectif des ressources -->
    <link rel="stylesheet" href="/css/styles.css">
    <script src="/js/landing.js" defer></script>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700&display=swap" rel="stylesheet">

</head>

<body>
    <!-- Logo avec dimensions explicites -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="/images/logo-plutus.webp" 
                     alt="Plutus Logo"
                     width="50" 
                     height="50">
                <span>Plutus</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <% if (locals.user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">
                                <i class="fas fa-temple me-2"></i>Temple de la Fortune
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="financeDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-coins me-2"></i>Offrandes & Tributs
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="financeDropdown">
                                <li><a class="dropdown-item" href="/revenus"><i
                                            class="fas fa-hand-holding-usd me-2"></i>Offrandes (Revenus)</a></li>
                                <li><a class="dropdown-item" href="/depenses"><i
                                            class="fas fa-cash-register me-2"></i>Tributs (Dépenses)</a></li>
                                <li><a class="dropdown-item" href="/charges"><i class="fas fa-receipt me-2"></i>Tributs
                                        Réguliers (Charges)</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="planningDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-scroll me-2"></i>Prophéties
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="planningDropdown">
                                <li><a class="dropdown-item" href="/budgets"><i
                                            class="fas fa-balance-scale me-2"></i>Décrets Divins (Budgets)</a></li>
                                <li><a class="dropdown-item" href="/emprunts"><i
                                            class="fas fa-hand-holding-usd me-2"></i>Pactes Financiers (Emprunts)</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/conseils">
                                <i class="fas fa-oracle me-2"></i>Oracle Financier
                            </a>
                        </li>
                    <% } %>
                </ul>

                <ul class="navbar-nav">
                    <% if (locals.user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-2"></i>
                                <%= locals.user.name || 'Mortel' %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <% if (locals.user.role==='admin' ) { %>
                                    <li><a class="dropdown-item" href="/admin"><i
                                                class="fas fa-scepter me-2"></i>Panthéon (Admin)</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                <% } %>
                                <li><a class="dropdown-item" href="/user"><i
                                            class="fas fa-user-cog me-2"></i>Sanctuaire (Profil)</a></li>
                                <li><a class="dropdown-item" href="/logout"><i
                                            class="fas fa-door-open me-2"></i>Quitter le Temple</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login"><i class="fas fa-key me-2"></i>Entrer dans le Temple</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary ms-2" href="/register"><i
                                    class="fas fa-user-plus me-2"></i>Initiation Divine</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        <%- body %>
    </main>

    <footer class="py-3 mt-4">
        <div class="container text-center">
            <p class="mb-0">&copy; <%= new Date().getFullYear() %> Plutus. Tous droits réservés. <a href="/privacy-policy"
                    class="text-light">Politique de Confidentialité</a></p>
        </div>
    </footer>

    <div id="cookie-consent" class="position-fixed bottom-0 start-0 w-100 bg-dark text-light p-2"
        style="display: none; z-index: 1000;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <p class="mb-0">Nous utilisons des cookies pour améliorer votre expérience.</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <button id="accept-cookies" class="btn btn-sm btn-primary">Accepter</button>
                    <a href="/privacy-policy" class="btn btn-sm btn-outline-light ms-2">En savoir plus</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts non-critiques en fin de body -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/landing.js"></script>
</body>

</html>