<% if (!locals.layout) { %>
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Erreur - Plutus</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<% } %>

<div class="error-page">
    <div class="error-container">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        
        <h1 class="error-title">Une Erreur Divine Est Survenue</h1>
        
        <div class="error-message">
            <p><%= message || "Les dieux semblent perturbés..." %></p>
            <% if (process.env.NODE_ENV !== 'production' && error && error.status === 404) { %>
                <div class="error-details">
                    <p>Status: 404 - Page non trouvée</p>
                </div>
            <% } %>
        </div>
        
        <div class="error-actions">
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Retourner au Temple
            </a>
            <% if (locals.user) { %>
                <a href="/dashboard" class="btn btn-secondary">
                    <i class="fas fa-temple me-2"></i>Consulter l'Oracle
                </a>
            <% } %>
        </div>
    </div>
</div>

<style>
.error-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(145deg, var(--obsidian), var(--obsidian-light));
    padding: 2rem;
}

.error-container {
    max-width: 600px;
    text-align: center;
    background: rgba(10, 9, 8, 0.95);
    border: 1px solid var(--border-gold);
    border-radius: 15px;
    padding: 3rem 2rem;
    box-shadow: 0 0 30px rgba(255, 215, 0, 0.1);
}

.error-icon {
    font-size: 4rem;
    color: var(--gold-primary);
    margin-bottom: 2rem;
    animation: pulse 2s infinite;
}

.error-title {
    font-family: 'Cinzel', serif;
    color: var(--gold-primary);
    font-size: 2rem;
    margin-bottom: 1.5rem;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
}

.error-message {
    color: var(--text);
    font-size: 1.1rem;
    margin-bottom: 2rem;
    padding: 1rem;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
}

.error-details {
    margin-top: 1rem;
    color: var(--gold-light);
    font-size: 0.9rem;
}

.error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.error-actions .btn {
    padding: 0.8rem 1.5rem;
    font-family: 'Cinzel', serif;
    transition: all 0.3s ease;
}

.error-actions .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 215, 0, 0.2);
}

@keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.7; }
    100% { transform: scale(1); opacity: 1; }
}

@media (max-width: 576px) {
    .error-container {
        padding: 2rem 1rem;
    }
    
    .error-title {
        font-size: 1.5rem;
    }
    
    .error-actions {
        flex-direction: column;
    }
    
    .error-icon {
        font-size: 3rem;
    }
}
</style>

<% if (!locals.layout) { %>
</body>
</html>
<% } %>